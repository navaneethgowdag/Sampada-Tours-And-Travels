{
  "name": "sampada-tours-backend",
  "version": "1.0.0",
  "description": "Backend API for Sampada Tours & Travels - Secure booking and management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "keywords": [
    "tours",
    "travel",
    "booking",
    "api",
    "express",
    "postgresql",
    "rest-api"
  ],
  "author": "Sampada Tours & Travels",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sampada-tours-backend.git"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "winston": "^3.15.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "@types/node": "^22.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js"
    ],
    "ignore": [
      "node_modules",
      "logs",
      "*.log"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}